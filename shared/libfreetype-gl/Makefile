PLATFORM		= $(shell uname)
CC				= gcc
RANLIB			= ranlib
CFLAGS			= -Wall `freetype-config --cflags` -I/usr/X11/include -g -O0
LIBS			= -lGL -lglut -lGLU -lm \
	              `freetype-config --libs`
ifeq ($(PLATFORM), Darwin)
	LIBS		= -framework OpenGL -framework GLUT -lm \
	               `freetype-config --libs` -L /usr/X11/lib
endif

ARCH	:= ${shell $(CC) -dumpmachine}
OBJ		:= obj-$(ARCH)
BIN		:= bin-$(ARCH)

DEMOS     := $(patsubst %.c,%,$(wildcard demo-*.c))
DEMOS_ATB := demo-atb-agg
DEMOS_MKP := demo-markup
DEMOS     := $(filter-out $(DEMOS_ATB), $(DEMOS))
#DEMOS     := $(filter-out $(DEMOS_MKP), $(DEMOS))
DEMOS     := $(patsubst  %, $(BIN)/%, $(DEMOS))

TESTS     := $(patsubst %.c,%,$(wildcard test-*.c))
HEADERS   := $(wildcard *.h)
SOURCES   := $(filter-out $(wildcard demo-*.c), $(wildcard *.c))
SOURCES   := $(filter-out makefont.c, $(SOURCES))
OBJECTS   := ${patsubst %.c, $(OBJ)/%.o, $(SOURCES)}

.PHONY: all clean distclean demos bin obj lib
all: bin obj demos $(BIN)/makefont

$(OBJ):
	mkdir -p $(OBJ)
$(BIN):
	mkdir -p $(BIN)

bin: $(BIN)
obj: $(OBJ)

demos: $(DEMOS)

tests: $(TESTS)

lib: $(OBJ) $(OBJ)/libfreetype-gl.a

$(OBJ)/libfreetype-gl.a: $(OBJECTS)
	rm -f $@ && $(AR) cru $@ $^ && $(RANLIB) $@

$(BIN)/%: $(OBJ)/%.o $(OBJ)/libfreetype-gl.a
	@echo "Building $@... "
	@$(CC) -MMD ${filter %.o %.a, $^} -o $@ $(LDFLAGS) $(LIBS)

$(OBJ)/%.o : %.c
	@echo "Building $@... "
	@$(CC) -MMD -c $(CPPFLAGS) $(CFLAGS) ${filter %.c, $^} -o $@ 

$(BIN)/demo-atb-agg: LDFLAGS += -lAntTweakBar
$(BIN)/demo-markup: LDFLAGS += -lfontconfig

clean:
	@-rm -rf $(OBJ) $(BIN)

distclean: clean
	@-rm -f *~

# include the dependency files generated by gcc -MMD, if any
-include ${wildcard ${OBJ}/*.d}
 
